! General
!urxvt*termName:  rxvt-256color
urxvt*loginShell:         true
urxvt*scrollBar:         false
urxvt*secondaryScroll:    true
urxvt*saveLines:         65535
urxvt*cursorBlink:       false
urxvt*urgentOnBell:       true
!urxvt*override-redirect:false
!urxvt*borderLess:       false
!urxvt*internalBorder:       0
!urxvt*externalBorder:       0

! Extensions
urxvt*perl-lib:        /usr/lib/urxvt/perl/
urxvt*perl-ext-common: default,matcher,searchable-scrollback
urxvt*urlLauncher:     /usr/bin/firefox
urxvt*matcher.button:  1
!  - catch ugly URLs
urxvt.cutchars:        `()'*<>[]{|}"

! Appearance
!  - use a bitmap font
urxvt*font:        -xos4-terminus-medium-*-*-*-14-*-*-*-*-*-*-*
urxvt*boldFont:    -xos4-terminus-bold-*-*-*-14-*-*-*-*-*-*-*
!  - use xft for drawing fonts
!urxvt*font:       xft:Terminus:8
!  - cursor
urxvt*cursorColor: #DCDCCC
!  - pseudo transparency
!urxvt*shading:    50
!urxvt*transparent:true
!
!  - color scheme
urxvt*background: #2d2d2d
urxvt*foreground: #d3d0c8
!black+bright-black
urxvt*color0:  #000000
urxvt*color8:  #555753
!red+bright-red
urxvt*color1:  #f14549
urxvt*color9:  #f2777a
!green+bright-green
urxvt*color2:  #5A800F
urxvt*color10: #A6EC1C
!yellow+bright-yellow
urxvt*color3:  #f99157
urxvt*color11: #f9c657
!blue+bright-blue
urxvt*color4:  #197ee5
urxvt*color12: #6699cc
!purple+bright-purple
urxvt*color5:  #cd5acc
urxvt*color13: #cc99cc
!cyan+bright-cyan
urxvt*color6:  #518080
urxvt*color14: #8AD8D8
!white+bright-white
urxvt*color7:  #8C8C96
urxvt*color15: #D6D6E0
